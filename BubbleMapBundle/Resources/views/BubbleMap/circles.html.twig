{% extends 'TfcBaseBundle:Default:page.html.twig' %}


{% block stylesheets %}
{{parent()}}
{% stylesheets '@NcgBubbleMapBundle/Resources/css/circles.css' %}
   <link rel="stylesheet" type="text/css" href="{{ asset_url }}"> 
{% endstylesheets %}
{% endblock %}

{% block main_content %}
<li><a href="#myModal" data-backdrop="false" data-toggle="modal">Click Me</a></li>
<div id="headerWrap">
   <div id="headerContent">
   </div>
</div>
<style>
#headerWrap {
    float: left;
    position: relative;
    left: 50%;
}

#headerContent {
    float: left;
    position: relative;
    left: -50%;
}
</style>
<div id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                 <h4 class="modal-title" id="popupHeader">Settings</h4>

            </div>
            <div class="modal-body" id="popupContent">
                <p>Settings</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
{% endblock %}

{% block javascripts %}
{{parent()}}

<script src="//code.jquery.com/ui/1.10.3/jquery-ui.js" type="text/javascript"></script>
<script src="/external/ckeditor/ckeditor.js" type="text/javascript"></script>
<script src="//d3js.org/d3.v3.min.js"></script>

<script>
{% if map_type is defined %}
var jsonFile = "/map_json/{{ map_type }}.json";
{% else %}
{% javascripts '@NcgBubbleMapBundle/Resources/js/test.json' %}
var jsonFile = "{{ asset_url }}";
{% endjavascripts %}
{% endif %}

</script>

{% javascripts '@NcgBubbleMapBundle/Resources/js/circles.js' %}
<script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}

{% endblock %}

